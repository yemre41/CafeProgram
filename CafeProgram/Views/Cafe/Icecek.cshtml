@model UrunSecimi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h3>UrunSecimi.Kategori</h3>
<form asp-action="UrunSec" asp-controller="Cafe" method="post">
    <table>
        <tr>
            <th>Name </th>
            <th>Value</th>
        </tr>
        @for (int i = 0; i < Model.Urunler.Count; i++)
        {
            <tr>
                <td>
                    <label>
                        <input type="number" asp-for="@Model.Urunler[i].UrunId" hidden />
                        <input type="checkbox" asp-for="@Model.Urunler[i].SeciliMi" />
                        @Model.Urunler[i].UrunIsmi
                    </label>
                </td>
                <td>@Model.Urunler[i].UrunFiyat</td>
            </tr>

        }
    <button type="Submit">Kaydet</button>
    </table>
    
    <button type="submit" asp-action="Hesapla" asp-controller="Cafe">Hesapla</button>
</form>
